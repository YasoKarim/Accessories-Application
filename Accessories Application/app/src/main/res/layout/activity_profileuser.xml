<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profileuser"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="20dp"
        android:background="#d69692">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon"
            android:layout_centerVertical="true"
            android:id="@+id/ProfileImage"/>
        <TextView
            android:id="@+id/full_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:layout_toRightOf="@id/ProfileImage"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/username_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:layout_toRightOf="@id/ProfileImage"
        android:layout_below="@+id/full_name_label"
        android:layout_marginLeft="10dp"
            android:includeFontPadding="false"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="-100dp"
        android:orientation="vertical">
          <com.google.android.material.card.MaterialCardView
              android:layout_width="0dp"
              android:layout_height="125dp"
              android:layout_weight="1"
              app:cardBackgroundColor="#f7c3e2">

              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:padding="5dp">
                 <TextView
                     android:id="@+id/payment_label"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="129"
                     android:textSize="20sp"
                     android:layout_centerInParent="true"/>
                  <TextView
                      android:id="@+id/payment_desc"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Favorites"
                      android:textSize="14sp"
                      android:layout_below="@+id/payment_label"
                      android:layout_centerHorizontal="true"/>
              </RelativeLayout>
          </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#f7c3e2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">
                <TextView
                    android:id="@+id/Shopping_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:id="@+id/Added_items"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Favorites"
                    android:includeFontPadding="false"
                    android:textSize="20sp"
                    android:layout_below="@+id/Shopping_cart"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="vertical">
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        android:layout_marginBottom="10dp"
        android:id="@+id/userNameprof">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:layout_marginBottom="10dp"
        android:id="@+id/phoneNumProf">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_marginBottom="10dp"
        android:id="@+id/emailUser">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_marginBottom="10dp"
        android:id="@+id/passworduser">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log out"
        android:background="#CD9090"
        android:id="@+id/profile_button" />

    <Button
        android:id="@+id/Home_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="5dp"
        android:background="#000000"
        android:backgroundTint="#EFEBEB"
        android:elevation="0dp"
        android:text="Home Page"
        android:textColor="#151515">

    </Button>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>